{
  "name": "Onchain Analytics Dev Container",
  "build": {
    "dockerfile": "../Dockerfile"
  },
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      },
      "extensions": [
        "ms-python.python",
        "ms-azuretools.vscode-docker",
        "esbenp.prettier-vscode",
        "innoverio.vscode-dbt-power-user",
        "sqlfluff.sqlfluff"
      ],
      "forwardPorts": [8080],
      "portsAttributes": {
          "8080": {
              "label": "Webserver",
              "onAutoForward": "openBrowser"
          }
      }
    }
  },
  "remoteUser": "vscode"
}